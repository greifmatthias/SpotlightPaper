<Window x:Class="SpotlightPaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotlightPaper"
        mc:Ignorable="d"
        Title="Control Panel" Height="300" Width="450"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Grid>
        <Image x:Name="imgBackground" Stretch="UniformToFill"></Image>

        <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Background="#ECEFF1">
            <CheckBox x:Name="chEnable" Checked="chEnable_Checked" Unchecked="chEnable_Checked" Margin="25">
                <TextBlock Text="Enable periodically Windows Spotlight image as desktop wallpaper." TextWrapping="WrapWithOverflow"></TextBlock>
            </CheckBox>
        </StackPanel>
    </Grid>
</Window>
