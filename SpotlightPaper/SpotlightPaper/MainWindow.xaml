<Window x:Class="SpotlightPaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpotlightPaper"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <CheckBox x:Name="chEnable" Checked="chEnable_Checked">
            <TextBlock Text="Enable periodicaly spotlight image as desktop wallpaper"></TextBlock>
        </CheckBox>
    </Grid>
</Window>
